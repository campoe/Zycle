<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnError">@color/colorOnError</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:iconTint">@color/colorOnPrimary</item>
        <item name="iconTint">@color/colorOnPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="android:actionOverflowMenuStyle">@style/ActionButtonOverflow</item>
        <item name="actionOverflowMenuStyle">@style/ActionButtonOverflow</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
        <item name="actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="background">@color/colorPrimary</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
    </style>

    <style name="ActionButtonOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:color">@color/colorOnPrimary</item>
        <item name="color">@color/colorOnPrimary</item>
    </style>

    <style name="DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:color">@color/colorOnPrimary</item>
        <item name="color">@color/colorOnPrimary</item>
    </style>

</resources>
